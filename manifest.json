{
    "manifest_version": 3,
    "name": "Number Crusher Extension",
    "version": "1.0",
    "description": "Scrapes phone numbers from the current tab and copies them to clipboard.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html"
    },
    "commands": {
      "scrape-numbers": {
        "suggested_key": {
          "default": "Ctrl+Shift+Q"
        },
        "description": "Scrape phone numbers"
      }
    }
  }